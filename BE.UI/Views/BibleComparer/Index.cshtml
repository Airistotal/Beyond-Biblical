@using BE.Infrastructure.Model;

@model BibleChapterInfo

@{
    ViewBag.Title = "Bible Comparer";
}

@section Styles {
    <link rel="stylesheet" type="text/css" href="@Url.Content("~/Content/bible.css")"/>
}

<h2>Index</h2>

<div id="book">
    <div id="spacer"></div>
    @Html.PartialAsync(
        "BibleTabs", 
        new Tuple<List<BibleVersion>, BibleChapterInfo> (
            new bibex_dbEntities().bible_version_key.ToList(), 
            Model))

    @Html.PartialAsync(
        "BookTabs", 
        new Tuple<List<BibleVersion>, BibleChapterInfo> (
            new bibex_dbEntities().key_abbreviations_english.ToList(), 
            Model))

    <div id="page">
        @Html.Action("GetPage", Model)
    </div>
</div>
