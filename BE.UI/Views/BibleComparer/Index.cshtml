@using BE.Infrastructure.Model;

@model BibleViewInfo

@{
    ViewBag.Title = "Bible Comparer";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@section Styles {
    <link rel="stylesheet" type="text/css" href="@Url.Content("~/css/bible.css")"/>
}

<div id="book">
    <div id="spacer"></div>
    @await Component.InvokeAsync("BibleTabs", new { bibleViewInfo = Model })
    @await Component.InvokeAsync("BookTabs", new { bibleViewInfo = Model })

    <div id="page">
        @await Component.InvokeAsync("BiblePage", new { bibleViewInfo = Model })
    </div>
</div>
