@using BE.Infrastructure.Model;

@model BibleViewInfo

@{
    ViewBag.Title = "Bible Comparer";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@section Styles {
    <link rel="stylesheet" type="text/css" href="@Url.Content("~/css/bible.css")"/>
}

<div id="book">
    <div id="spacer"></div>

    <form asp-action="Index" asp-controller="BibleComparer">
        @await Html.PartialAsync("Partials/BibleTabs", Model)
        @await Html.PartialAsync("Partials/BookTabs", Model)
        @await Html.PartialAsync("Partials/ChapterTabs", Model)

        <input type="submit" />
    </form>

    <div id="page">
        @await Component.InvokeAsync("PageHeader", new { bibleViewInfo = Model })
        @await Component.InvokeAsync("PageContent", new { bibleViewInfo = Model })
    </div>
</div>
