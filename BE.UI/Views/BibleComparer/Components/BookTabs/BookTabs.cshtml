@using BE.Infrastructure.Model

@model Tuple<List<BibleBookAbbreviation>, BibleChapterInfo>

@{
    BibleChapterInfo currPage = Model.Item2;
}

<div id="book_tabs">
    @foreach (var item in Model.Item1)
    {
        if (item.IsPrimaryAbbreviation)
        {
            <div class="book_tab">
                @Html.ActionLink(
                    item.Abbreviation,
                    "Index",
                    new BibleChapterInfo() {
                        MainBible = currPage.MainBible,
                        OtherBibles = currPage.OtherBibles,
                        Book = item.Book,
                        Chapter = 1
                    }
                );
            </div>
        }
    }
</div>